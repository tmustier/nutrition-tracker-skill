{
  "name": "nutrition-tracker-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for logging nutrition via mobile with Claude AI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:legacy": "node test/test-github-integration.js && node test/verify-module.js"
  },
  "keywords": ["telegram", "nutrition", "claude-ai", "usda"],
  "author": "Thomas Mustier",
  "license": "Apache-2.0",
  "dependencies": {
    "telegraf": "^4.12.2",
    "axios": "^1.6.0",
    "dotenv": "^16.0.3",
    "js-yaml": "^4.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nock": "^13.4.0",
    "@jest/globals": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "server.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
