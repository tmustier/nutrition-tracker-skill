# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Webhook URL for Telegram
# For Railway: Set this to https://your-app.railway.app (or leave blank to auto-detect from RAILWAY_PUBLIC_DOMAIN)
# For local development: Use ngrok URL (e.g., https://abc123.ngrok.io)
WEBHOOK_URL=https://your-app.railway.app

# Optional: Webhook secret for enhanced security (highly recommended for production)
WEBHOOK_SECRET=your_webhook_secret_token_for_security

# Node environment (Railway sets this automatically to 'production')
# For local testing, use 'development' to bypass strict HTTPS requirements
NODE_ENV=production

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=tmustier
GITHUB_REPO=nutrition-tracking
GITHUB_BRANCH=daily-logs

# USDA FoodData Central API
USDA_API_KEY=your_usda_api_key

# Optional: Telegram User ID Whitelist (comma-separated)
# ALLOWED_USERS=123456789,987654321
